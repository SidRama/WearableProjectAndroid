        android:layout_height="wrap_content"
        android:text="Device Name"
        android:id="@+id/device"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        android:textSize="30dp" />

